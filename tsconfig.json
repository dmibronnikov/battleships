{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "build",
    "resolveJsonModule": true,
    "sourceMap": true,
    "noImplicitAny": true,
  },
  "include": ["src/**/*", "tests/**/*"],
}
